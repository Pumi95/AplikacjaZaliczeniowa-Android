<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_main"
        android:scaleX="1.16"/>
    <ImageView
        android:id="@+id/title_mainmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_ingame"

        android:layout_marginBottom="444dp" />
    <ImageView
        android:id="@+id/plain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/test_button"
        android:scaleX="0.7"/>

    <TextView
        android:id="@+id/theend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"

        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text=""/>

    <TextView
        android:id="@+id/wynikko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="Twój wynik: 6 pkt
spójrz na północ ;)"/>

    <EditText
        android:id="@+id/name"

        android:textColor="#ffffff"
        android:textColorHint="#cccccc"

        android:hint="Twoja nazwa"
        android:gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wynikko"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="400px"
        android:layout_height="160px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/plain"

        android:onClick="update"
        android:background="@drawable/sendbutton"/>
    <Button

        android:layout_width="400px"
        android:layout_height="160px"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirm"

        android:onClick="goBack"
        android:background="@drawable/returnbutton"/>
</RelativeLayout>